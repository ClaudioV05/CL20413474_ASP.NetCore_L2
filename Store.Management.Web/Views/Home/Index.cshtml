@model Store.Management.Web.ViewModels.StoreManagementLoginUserViewModel

<div class="d-flex justify-content-center">
    <div class="row">
        <div class="form-group mt-3">
            @Html.LabelFor(m => m.Email, new { @class = "store-management-label-login-global" })
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { id = "edtEmail", type = "text", @class = "form-control form-select-lg" } })
            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="form-group mt-3">
            @Html.LabelFor(m => m.Password, new { @class = "store-management-label-login-global" })
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { id = "edtPassword", type = "password", @class = "form-control form-select-lg" } })
            @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="form-group mt-3">
            @Html.LabelFor(m => m.RememberMe, new { @class = "store-management-label-login-global" })
            @Html.CheckBoxFor(m => m.RememberMe, new { htmlAttributes = new { id = "chkRememberMe", type = "checkbox", @class = "form-control form-select-lg" } })
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-outline-primary btn-lg" id="btnLogin" name="btnLogin">Login</button>
            <button type="button" class="btn btn-outline-secondary btn-lg" id="btnRegister" name="btnRegister">Register</button>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/_ModalInformation.cshtml")