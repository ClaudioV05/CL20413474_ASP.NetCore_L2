@model Store.Management.Web.ViewModels.StoreManagementLoginUserViewModel

<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-group mt-3">
                @Html.LabelFor(m => m.Username, new { @class = "store-management-label-login-global" })
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { id = "edtUserName", type = "text", @class = "form-control form-select-lg" } })
            </div>
            <div class="form-group mt-3">
                @Html.LabelFor(m => m.Password, new { @class = "store-management-label-login-global" })
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { id = "edtPassword", type = "text", @class = "form-control form-select-lg" } })
            </div>
            <div class="mt-3">
                <button type="button" class="btn btn-primary" id="btnLogin" name="btnLogin">Login</button>
                <button type="button" class="btn btn-secondary" id="btnRegister" name="btnRegister">Register</button>
            </div>
        </div>
        <div class="col">
        </div>
        <div class="col">
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/_ModalInformation.cshtml")